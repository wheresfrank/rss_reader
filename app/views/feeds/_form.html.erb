<%= form_with(model: feed) do |form| %>
  <% if feed.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
        <% feed.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="columns">
    <div class="column is-one-third field mr-3">
      <%= form.label :name, class: "label" %>
      <%= form.text_field :name, class: "input", placeholder: "Name of RSS Feed" %>
    </div>

    <div class="column is-two-thirds field">
      <%= form.label :source, class: "label" %>
      <%= form.text_field :source, class: "input", placeholder: "Enter RSS XML Link" %>
    </div>
  </div>

  <div class="field">
    <%= form.check_box :favorite %>
    <%= form.label "Mark as favorite", class: "checkbox" %>
  </div>

  <div>
    <%= form.submit "Add Feed", class: "button is-primary mt-4" %>
  </div>
<% end %>
